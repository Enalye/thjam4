{
	"name": "game",
	"description": "Margatroid Pride",
	"copyright": "Copyright Â© 2019",
	"authors": ["JonathKane", "MrNuage", "Automn", "Enalye"],
	"dependencies": {
		"atelier": {
			"version": "~master",
			"path": "../atelier"
		},
		"grimoire": {
			"version": "~master",
			"path": "../grimoire"
		}
	},
	"targetName": "margapride",
	"targetType": "executable",
	"workingDirectory": "..",
	"buildTypes": {
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"]
		},
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	},
	"configurations": [
		{
			"name": "linux-build",
			"platforms": ["linux"],
			"targetPath": "../bin",
			"postBuildCommands": [
				"cp ../lib/*.dll ../bin"
			]
		},
		{
			"name": "windows-build",
			"platforms": ["windows"],
			"targetPath": "../bin",
			"postBuildCommands": [
				"copy ..\\lib\\*.dll ..\\bin"
			]
		}
	]
}