import "data/script/rainbow.gr"
import "data/script/skull.gr"

func wait(int n) {
	loop(n) {
		yield;
	}
}

main {
	playerShots();

	int enemyIdx = 0;
	array posx = [500f, 600f, 700f, 800f, 900f];
	array posy = [-150f, -150f, -150f, -150f, -150f];

	loop (5) {
		float x = posx[enemyIdx] as float;
		float y = posy[enemyIdx] as float;

		spawnEnemy(enemyIdx, "enemy2", x, y);
		moveSkull(enemyIdx);
		enemyIdx++;
	}
}